<!-- MASTER PAGE -->
<% layout('layout/main') %>
<!-- MENU NAVBAR -->
<%- include('partials/menu.ejs') %>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
<script defer src="js/covidChart.js"></script>

<div class="container">
    <!-- TITLE -->
    <div class="row">
        <div class="col">
            <div class="Title text-center">
                <span>COVID-19(SARS-CoV-2)</span>
            </div>
            <div class="subTitle text-center">
                <span>Charts(Graficas)</span>
            </div>

        </div>
    </div>

    <!-- SELECT TAG/COMBOBOX -->
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h3 class="text-center mb-3" style="color: #F56E47;">Select a Country</h3>
            <select id="cbxContry" class="browser-default custom-select">
                <option value="" disabled selected>Select a Country</option>
            </select>
        </div>
        <div class="col-md-3"></div>
    </div>

    <!-- CHART -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="text-center mb-3">
                <span id="titleChart"></span><br>
                <span id="firtConfirmed"></span>
            </div>
            <div class="divChart" style="display: none; margin-bottom: 30px;" id="divChart">
                <canvas id="myChart"></canvas>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col">

        </div>
    </div>
</div>